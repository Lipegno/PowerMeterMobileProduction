<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="-3dp"
        android:left="-2dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="2dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape>
            <solid android:color="@color/bg_color" />

            <stroke
                android:width="2dp"
                android:color="#D0CDB3" />

            <corners android:bottomLeftRadius="12dp" >
            </corners>
        </shape>
    </item>

</layer-list>